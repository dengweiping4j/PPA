<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 自动扫描 -->
    <context:component-scan base-package="com.wq.mapper"/>
    <context:component-scan base-package="com.wq.service"/>
    <context:component-scan base-package="com.wq.redis"/>
    <bean id="dataGridUtil" class="com.wq.util.DataGridUtil"/>

    <!-- druid监控配置 -->
    <import resource="classpath:spring-context-druid-stat.xml"/>
    <!-- 事务管理配置 -->
    <import resource="classpath:spring-context-tx.xml"/>

</beans>